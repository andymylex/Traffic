<Window x:Class="Traffic.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traffic"
        mc:Ignorable="d"
        Title="Граф" Height="490" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#FFC0DCC0"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,8,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
            <ComboBox x:Name="DistrictComboBox" Width="140" SelectionChanged="DistrictComboBox_SelectionChanged"/>
        </StackPanel>
        <Image Margin="8" x:Name="DistrictImage" Grid.Row="1" Stretch="Uniform"/>
    </Grid>
</Window>
